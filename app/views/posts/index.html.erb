<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>

<div id="posts">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    <% end %>
  <% else %>
    <p>No posts found.</p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
